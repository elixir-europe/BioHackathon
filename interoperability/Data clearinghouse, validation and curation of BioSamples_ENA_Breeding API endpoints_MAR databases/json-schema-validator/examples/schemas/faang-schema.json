{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FAANG Schema",
  "description": "Schema based on rules found in https://www.ebi.ac.uk/vg/faang/rule_sets/FAANG%20Samples.",
  "$async": true,

  "type": "object",
  "properties": {

    "alias": {
      "description": "A sample unique identifier in a submission.",
      "type": "string"
    },
    "taxonId": {
      "description": "The taxonomy id for the sample species.",
      "type": "integer"
    },
    "taxon": {
      "description": "The taxonomy name for the sample species.",
      "type": "string"
    },
    "title": {
      "description": "A sample title.",
      "type": "string"
    },
    "releaseDate": {
      "description": "Date from which this sample is released publicly.",
      "type": "string",
      "format": "date"
    },
    "description": {
      "description": "A brief description of the sample including species name.",
      "type": "string"
    },
    "sampleRelationships": {
      "description": "List of relationships between samples.",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "target": {
            "description": "Sample accession to which the sample relationship refers to.",
            "type": "string",
            "pattern": "^SAM[END][AG]?[0-9]+"
          },
          "nature": {
            "description": "Nature of the relationship between the samples.",
            "type": "string",
            "enum": ["derived from", "same as", "child of"]
          }
        },
        "required": ["target", "nature"]
      }
    },

    "attributes": {
      "description": "Attributes for describing a sample.",
      "type": "object",
      "properties": {
        "project": {
          "description": "State that the project is 'FAANG'",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "const": "FAANG"
              }
            }
          }
        },
        "material": {
          "description": "The type of material being described.",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "enum": [
                  "organism",
                  "specimen from organism",
                  "cell specimen",
                  "pool of specimens",
                  "cell culture",
                  "cell line"
                ]
              }
            },
            "required": ["terms"],
            "if": {"required": ["value"]},
            "then": {
              "if": {"properties": {"value": {"const": "organism"}}},
              "then": {"properties": {"terms": {"contains": {"pattern": "\\S*?OBI_0100026$"}}}},
              "else": {
                "if": {"properties": {"value": {"const": "specimen from organism"}}},
                "then":{"properties": {"terms": {"contains": {"pattern": "\\S*?OBI_0001479$"}}}},
                "else": {
                  "if": {"properties": {"value": {"const": "cell specimen"}}},
                  "then": {"properties": {"terms": {"contains": {"pattern": "\\S*?OBI_0001468$"}}}},
                  "else": {
                    "if": {"properties": {"value": {"const": "pool of specimens"}}},
                    "then": {"properties": {"terms": {"contains": {"pattern": "\\S*?OBI_0302716$"}}}},
                    "else": {
                      "if": {"properties": {"value": {"const": "cell culture"}}},
                      "then": {"properties": {"terms": {"contains": {"pattern": "\\S*?OBI_0001876$"}}}},
                      "else": {
                        "if": {"properties": {"value": {"const": "cell line"}}},
                        "then": {"properties": {"terms": {"contains": {"pattern": "\\S*?CLO_0000031$"}}}}
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "availability": {
          "description": "Either a link to a web page giving information on sample availability (who to contact and if the sample is available).",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "anyOf": [
                  {"format": "uri"},
                  {"pattern": "^mailto:.*$"}
                ]
              }
            }
          }
        },
        "sex":{
          "description": "Animal sex, described using any child term of PATO_0000047.",
          "maxItems": 1,
          "items": {
            "properties": {
              "terms": {
                "items": {
                  "properties": {
                    "url": {
                      "isChildTermOf": {
                        "parentTerm": "http://purl.obolibrary.org/obo/PATO_0000047",
                        "ontologyId": "pato"
                      }
                    }                    
                  }
                }
              }
            }
          }
        },
        "birthDate": {
          "description": "Birth date, in the format YYYY-MM-DD, or YYYY-MM where only the month is known. For embryo samples record 'not applicable'.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["YYYY-MM-DD", "YYYY-MM", "YYYY"]
              }
            }
          }
        },
        "breed": {
          "description": "Animal breed, described using the FAANG breed description guidelines (http://bit.ly/FAANGbreed).",
          "maxItems": 1
        },
        "healthStatus": {
          "description": "Healthy animals should have the term normal, otherwise use the as many disease terms as necessary from EFO."
        },
        "birthLocation": {
          "description": "Name of the birth location",
          "maxItems": 1
        },
        "birthLocationLongitude": {
          "description": "Longitude of the birth location in decimal degrees.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["decimal degrees"]
              }
            }
          }
        },
        "birthLocationLatitude": {
          "description": "Latitude of the birth location in decimal degrees.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["decimal degrees"]
              }
            }
          }
        },
        "birthWeight": {
          "description": "Birth weight, in kilograms or grams.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["kilograms", "grams"]
              }
            }
          }
        },
        "placentalWeight": {
          "description": "Placental weight, in kilograms or grams.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["kilograms", "grams"]
              }
            }
          }
        },
        "pregnancyLength": {
          "description": "Pregnancy length of time, in days, weeks or months.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["day", "week", "month", "days", "weeks", "months"]
              }
            }
          }
        },
        "deliveryTiming": {
          "description": "Was pregancy full-term. early or delayed.",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "enum": ["early parturition", "full-term parturition", "delayed parturition"]
              }
            }
          }
        },
        "deliveryEase": {
          "description": "Did the delivery require assistance.",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "enum": ["normal autonomous delivery", "c-section", "veterinarian assisted"]
              }
            }
          }
        },
        "pedigree": {
          "description": "A link to pedigree information for the animal",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "format": "uri"
              }
            }
          }
        },
        "specimenCollectionDate": {
          "description": "Date at which the specimen was collected.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["YYYY-MM-DD", "YYYY-MM", "YYYY"]
              }
            }
          }
        },
        "animalAgeAtCollection": {
          "description": "Animal age at the point of collection. An estimate is acceptable where the age is not precisely known.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["hour", "day", "week", "month", "year", "hours", "days", "weeks", "months", "years"]
              }
            }
          }
        },
        "developmentalStage": {
          "description": "Developmental stage, any child term of EFO_0000399.",
          "maxItems": 1
        },
        "healthStatusAtCollection": {
          "description": "Animal disease / health status at point of collection. Healthy animals should have the term normal, otherwise use the as many disease terms as necessary from EFO."
        },
        "organismPart": {
          "description": "Ontology for part of organism specimen from, UBERON is preferred to BTO.",
          "maxItems": 1
        },
        "specimenCollectionProtocol": {
          "description": "A link to the protocol for specimen collection.",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "format": "uri"
              }
            }
          }
        },
        "fastedStatus": {
          "description": "Fed, fasted or unknown. Criteria for this status must be in your protocol.",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "enum": ["fed", "fasted", "unknown"]
              }
            }
          }
        },
        "numberOfPieces": {
          "description": "Number of specimen piecies used.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["count"]
              }
            }
          }
        },
        "specimenVolume": {
          "description": "(Pool) Specimen volume. Total sum if using multiple specimen pieces.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["square centimeters", "liters", "milliliters"]
              }
            }
          }
        },
        "specimenSize": {
          "description": "(Pool) Specimen size. Total sum if using multiple specimen pieces.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["meters", "centimeters", "millimeters", "square meters", "square centimeters", "square millimeters"]
              }
            }
          }
        },
        "specimenWeight": {
          "description": "(Pool) Specimen weight. Total sum if using multiple specimen pieces.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["kilograms", "grams"]
              }
            }
          }
        },
        "specimenPictureUrl": {
          "description": "A link a picture of the specimen, multiple links allowed.",
          "items": {
            "properties": {
              "value": {
                "format": "url"
              }
            }
          }
        },
        "gestationalAgeAtSampleCollection": {
          "description": "If the animal was pregnant when the specimen was taken, state how long had been pregnant for",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["day", "week", "days", "weeks"]
              }
            }
          }
        },
        "poolCreationDate": {
          "description": "Date at which the pool was created.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["YYYY-MM-DD", "YYYY-MM", "YYYY"]
              }
            }
          }
        },
        "poolCreationProtocol": {
          "description": "A link to the protocol for pool of specimens creation.",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "format": "url"
              }
            }
          }
        },
        "markers": {
          "description": "Markers used to isolate and identify the cell type (e.g. for FACS sorted cells).",
          "maxItems": 1
        },
        "cellType": {
          "description": "Provide a cell type from the CL ontology."
        },
        "purificationProtocol": {
          "description": "Link to protocol describing how the cells were purified.",
          "maxItems": 1,
          "items": {
            "value": {
              "format": "uri"
            }
          }        },
        "cultureType": {
          "description": "Provide a child term of BTO_0000214",
          "maxItems": 1
        },
        "cellCultureProtocol": {
          "description": "Link to protocol describing how the cells were purified",
          "maxItems": 1
        },
        "cultureConditions": {
          "description": "Brief description of culture conditions (e.g. 'on feeder cells', 'E8 media')",
          "maxItems": 1
        },
        "numberOfPassages": {
          "description": "Number of times the cell line has been re-plated and allowed to grow back to confluency or to some maximum density if using suspension cultures",
          "maxItems": 1
        },
        "cellLine": {
          "description": "Name of the cell line",
          "maxItems": 1
        },
        "biomaterialProvider": {
          "description": "Name of company or lab that supplied the cell line",
          "maxItems": 1
        },
        "catalogueNumber": {
          "description": "Identifier for the cell line in the suppliers catalogue. E.g. 'ACC 701' for IPEC-J2 from DSMZ.",
          "maxItems": 1
        },
        "dateEstablished": {
          "description": "Date the line was established/re-established",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["YYYY-MM-DD", "YYYY-MM", "YYYY"]
              }
            }
          }
        },
        "publication": {
          "description": "Publication Digitial Object Identifier (DOI) e.g. 'doi://10.1139/o09-005'. Publication where the cell line has been fully described and should include details such as doubling time and adhesion preference. You can use pubmed to find your DOI https://www.ncbi.nlm.nih.gov/pubmed",
          "maxItems": 1
        },
        "cultureProtocol": {
          "description": "Link to protocol describing the maintenance of the culture",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "format": "url"
              }
            }
          }
        },
        "disease": {
          "description": "Disease child term of either PATO_0000461 or EFO_0000408",
          "maxItems": 1
        },
        "karyotype": {
          "description": "Karyotype of the cell line",
          "maxItems": 1
        }
      },
      "required": ["material", "project"],
      "patternProperties": {
        "^.*$": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "value": {
                "type": "string",
                "minLength": 1
              },
              "units": {"type": "string"},
              "terms": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "properties": {
                    "url": { "type": "string", "format": "uri" }                    
                  },
                  "required": ["url"]
                }
              }
            },
            "required": ["value"]
          }
        }
      }
    }
  },
  "required": ["alias", "taxonId", "taxon", "attributes"],

  "if": {"properties": {"attributes": {"required": ["material"]}}},
  "then": {
    "if": {"properties": {"attributes": {"properties": {"material": {"items": {"properties": {"value": {"const": "organism"}}}}}}}},
    "then": {"properties": {"attributes": {"required": ["sex", "breed"]}}},
    "else": {
      "if": {"properties": {"attributes": {"properties": {"material": {"items": {"properties": {"value": {"const": "specimen from organism"}}}}}}}},
      "then": {
        "properties": {"attributes": {"required": ["specimenCollectionDate", "animalAgeAtCollection", "developmentalStage", "organismPart", "specimenCollectionProtocol"]}}
      },
      "else": {
        "if": {"properties": {"attributes": {"properties": {"material": {"items": {"properties": {"value": {"const": "pool of specimens"}}}}}}}},
        "then": {
          "properties": {"attributes": {"required": ["poolCreationDate", "poolCreationProtocol"]}}
        },
        "else": {
          "if": {"properties": {"attributes": {"properties": {"material": {"items": {"properties": {"value": {"const": "cell specimen"}}}}}}}},
          "then": {
            "properties": {"attributes": {"required": ["cellType", "purificationProtocol"]}}
          },
          "else": {
            "if": {"properties": {"attributes": {"properties": {"material": {"items": {"properties": {"value": {"const": "cell culture"}}}}}}}},
            "then": {
              "properties": {"attributes": {"required": ["cellType", "cultureType", "cellCultureProtocol", "cultureConditions", "numberOfPassages"]}}
            },
            "else": {
              "if": {"properties": {"attributes": {"properties": {"material": {"items": {"properties": {"value": {"const": "cell line"}}}}}}}},
              "then": {
                "properties": {"attributes": {"required": ["sex", "cellLine", "biomaterialProvider"]}}
              }
            }
          }
        }
      }
    }
  }
}
